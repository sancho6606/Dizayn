<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/foooon"></ImageView>

    <LinearLayout
        android:padding="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView

        app:cardBackgroundColor="#4569"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativelayhotdog"
            android:background="@drawable/cardbackround"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_marginLeft="45dp"
                android:id="@+id/textview1"
                android:padding="20dp"
                android:background="@drawable/textview"
                android:fontFamily="@font/text2"
                android:layout_centerVertical="true"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="HOT-DOG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/textview1"
                android:layout_marginLeft="30dp"
                android:src="@drawable/hotdog1"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="#4569"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativelayburger"
                android:background="@drawable/cardbackround"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginLeft="50dp"
                    android:id="@+id/textview"
                    android:padding="20dp"
                    android:background="@drawable/textview"
                    android:fontFamily="@font/text2"
                    android:layout_centerVertical="true"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="BURGER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                   android:layout_toRightOf="@id/textview"
                    android:scaleType="centerCrop"
                  android:layout_marginLeft="30dp"
                    android:src="@drawable/burger1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="#4569"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativelayshaverma"
                android:background="@drawable/cardbackround"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginLeft="35dp"
                    android:id="@+id/textview2"
                    android:padding="20dp"
                    android:background="@drawable/textview"
                    android:fontFamily="@font/text2"
                    android:layout_centerVertical="true"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="SHAVERMA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textview2"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/shaverma1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>