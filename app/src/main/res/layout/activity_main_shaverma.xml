<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityShaverma">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/foooon"></ImageView>

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="#4569"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/cardbackround"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/textview4"
                        android:paddingLeft="50dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:background="@drawable/textview"
                        android:fontFamily="@font/text2"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Шаурма\n523.87 ₽"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_toRightOf="@id/textview4"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/obichnishaverma"
                        android:layout_width="110dp"
                        android:layout_height="110dp"></ImageView>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/textview5"
                        android:paddingLeft="50dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:background="@drawable/textview"
                        android:fontFamily="@font/text2"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Сырная\nШаурма\n689.15 ₽"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_toRightOf="@id/textview5"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/sirnishaverma"
                        android:layout_width="100dp"
                        android:layout_height="100dp"></ImageView>



                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>